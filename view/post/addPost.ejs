<%- include('../includes/header.ejs')%>
</head>
<body class="red lighten-4">
    <header>
        <%- include('../includes/navbar.ejs')%>
    </header>
    <main>
        <h2 class="center-align teal-text" style="margin-top: 4rem;">ADD SOMETHING TO YOUR POST</h2>
        <div class="container" style="margin-top: 15rem;">
            <div class="row">
                <form class="col s12" method="post" action="/addPost" enctype="multipart/form-data">
                  <input type="hidden" name="email" value="<%=data.email%>">
                  <input type="hidden" name="full_name" value="<%=data.full_name%>">
                  <input type="hidden" name="id" value="<%=data._id%>">
                    <div class="file-field input-field">
                        <div class="btn">
                          <span>Browse Files</span>
                          <input type="file" name="post_image" id="post_image">
                        </div>
                        <div class="file-path-wrapper">
                          <input class="file-path validate" type="text" name="post_image_name">
                        </div>
                    </div>
                    <div class="input-field col s12">
                        <textarea id="textarea1" class="materialize-textarea" name="post_text"></textarea>
                        <label for="textarea1">Write about your Post</label>
                      </div>
                    <button type="submit" class="waves-effect waves-light btn">Add Post</button>
                </form>
              </div>
        </div>
    </main>
<%- include('../includes/footer.ejs')%>
