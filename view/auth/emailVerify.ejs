<link rel="stylesheet" href="/css/password_eye.css">
</head>
<body class="red lighten-4">
    <header>
        <%- include('../includes/navbar.ejs')%>
    </header>
    <main>
        <div class="container" style="margin-top: 60px;">
            <div class="row">
                <% if(flash_success){%>
                    <p class="green-text accent-2"><%=flash_success%></p>
                <%}%>
                <form action="/forgetPassword/emailVerify" method="post" class="login-form">
                    <div class="input-field col s12">
                        <input placeholder="" id="email" type="email" class="validate" name="email">
                        <label for="email">Email</label>
                    </div>
                    <button type="submit" class="waves-effect waves-light btn">Verify</button>
                </form>
            </div>
        </div>
    </main>
